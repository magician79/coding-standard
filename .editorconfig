root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[**.js]
indent_size = 2

[**.less]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2